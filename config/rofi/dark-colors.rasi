/* -*- mode: css; -*- */

/**
 * ROFI Color theme
 */

/* global settings and color variables */
* {

    font: "Roboto 14";

    /* fg-color: #c8c8d0; */
    fg-color: #d7d7d7;
    bg-color: #333333;

    /* main bg */
    bg-trans: #1e1e1eF0;

    /* Make text color white and background fully transparent */
    text-color:        @fg-color;
    background-color:  rgba(0,0,0,0);

    dim-trans: #282828C5;
    bg-accent: #353535;
    accent-trans: #353535C5;

}
